---
import Phrase from "../components/Phrase.astro";
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";
import { getDateId } from "../utils/date";

const today = new Date();
const phrase = await getEntry("phrases", getDateId(today));
---

<Layout>
  <Phrase phrase={phrase?.body || "NOT FOUND"} author="Ollama" date={today} />
</Layout>
